    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Attach to Chrome",
            "port": 9000,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
    {
        "name": "Launch Built-in web server",
        "type": "php",
        "request": "launch",
        "runtimeArgs": [
            "-dxdebug.mode=debug",
            "-dxdebug.start_with_request=yes",
            "-S",
            "localhost:80"
        ],
        "program": "",
        "cwd": "${workspaceRoot}",
        "port": 9000,
        "serverReadyAction": {
            "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
            "uriFormat": "http://localhost:%s",
            "action": "openExternally"
        }
    },
        {
            "name": "Listen for xdebbug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Lauch current open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}